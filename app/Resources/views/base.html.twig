<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{% block title %}Athletik | Les 1000 pas{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        <link rel="stylesheet" href="css/foundation.css">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block menu %}
            <!-- Start Top Bar -->
            <div class="top-bar">
              <div class="top-bar-left">
                <ul class="menu">
                  <a href="{{ path('homepage')}}" class="logo"><li class="menu-text">Athletik</li></a>
                  <a href="{{ path('aboutus')}}"><li class="menu-text">Présentation</li></a>
                  <a href="{{ path('events')}}"><li class="menu-text">Évenements</li></a>
                  <a href="{{ path('classements')}}"><li class="menu-text">Classements</li></a>
                </ul>
              </div>
              <div class="top-bar-right">
                <ul class="menu">
                  <li><a href="#">Mon accès</a></li>

                </ul>
              </div>
            </div>
            <!-- End Top Bar -->
        {% endblock %}
            
        {% block main %}
        {% endblock %}
        
        {% block footer %}
        <footer>    
        <div class="small-6 large-3 columns footer">
            <p class="lead">Suivez-nous</p>
                <ul class="menu vertical">
                    <li><a href="#"><i class="fi-social-twitter"></i> Twitter</a></li>
                    <li><a href="#"><i class="fi-social-facebook"></i> Facebook</a></li>
                    <li><a href="#"><i class="fi-social-instagram"></i> Instagram</a></li>
                </ul>
        </div>
            
        <div class="small-6 large-3 columns footer">
            <p class="lead">Autres</p>
                <ul class="menu vertical">
                    <li><a href="#"><i class="fi-social-twitter"></i> Contact</a></li>
                    <li><a href="#"><i class="fi-social-facebook"></i> Mentions Légales</a></li>
                </ul>
        </div>
        </footer>
        {% endblock %}    
        
        
            {% block javascripts %}
            <script src="js/vendor/jquery.js"></script>
            <script src="js/vendor/what-input.js"></script>
            <script src="js/vendor/foundation.js"></script>
            <script src="js/app.js"></script>
            <script>$(document).foundation();</script>
            <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
            <script src="http://dhbhdrzi4tiry.cloudfront.net/cdn/sites/foundation.js"></script>
            {% endblock %}
        
    </body>
</html>
